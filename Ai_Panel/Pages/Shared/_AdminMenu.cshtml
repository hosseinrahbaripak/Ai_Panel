@using Ai_Panel.Application.Constants
@using Ai_Panel.Classes

@{
	string roles = User.FindFirst(CustomClaimTypes.Roles).Value;
}

<header>
	<nav class="navbar navbar-expand-lg navbar-light fixed-top mb-3">
		<div class="container-fluid">
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarSupportedContent">
				<div class="d-flex">
					<div class="dropdown">
						<button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
							سلام
						</button>
						<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
							<li>
								<a class="dropdown-item" onclick="AdminChangePass(0)">
									<i class="fa fa-lock"></i>
									تغییر کلمه عبور
								</a>
							</li>
							<li>
								<a class="dropdown-item" asp-page="/SignOut">
									<i class="fa fa-sign-out"></i>
									خروج
								</a>
							</li>
						</ul>
					</div>
				</div>
				<ul class="navbar-nav me-auto mb-2 mb-lg-0">
					@if (roles.Contains("Admin") || roles.Contains("SuperAdmin"))
					{
						<li class="nav-item">
							<a class="dropdown-item" asp-page="@Urls.AiConfig@ActionPage.Index">تنظیمات و کانفیگ</a>
						</li>
						<li class="nav-item">
							<a class="dropdown-item" asp-page="@Urls.User@ActionPage.Index">کاربران</a>
						</li>

						<li class="nav-item">
							<a class="dropdown-item" href="/Admin/TestAiConfigLogs">گزارشات هوش مصنوعی</a>
						</li>
						<li class="nav-item">
							<a class="dropdown-item" href="/Admin/MultiStepAiConfig">کانفیگ چند مرحله ای</a>
						</li>
						<li class="nav-item">
							<a class="dropdown-item" href="/Admin/Contract">قرارداد ها</a>
						</li>
						<li class="nav-item">
							<a class="dropdown-item" href="/Admin/AiServices">سرویس های هوش مصنوعی</a>
						</li>
						@if(roles.Contains("User")){
							<li class="nav-item">
								<a class="dropdown-item" href="/User/Chat">صفحه چت</a>
							</li>
						}
					}
					else
					{
						<li class="nav-item">
							<a class="dropdown-item" href="/User/Chat">صفحه چت</a>
						</li>
					}

				</ul>
			</div>
		</div>
	</nav>
</header>